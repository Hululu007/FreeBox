<?xml version="1.0" encoding="UTF-8"?>

<?import io.knifer.freebox.component.converter.NetworkInterfaceAndIP2StringConverter?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="root" stylesheets="@css/view/settings-view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.knifer.freebox.controller.SettingsController">
   <fx:define>
      <NetworkInterfaceAndIP2StringConverter fx:id="httpIpChoiceBoxConverter" />
   </fx:define>
   <center>
      <TabPane BorderPane.alignment="CENTER">
         <tabs>
            <Tab closable="false" text="%settings.network-and-service">
                <graphic>
                    <FontIcon iconLiteral="fa-wifi:12:#4169E1" />
                </graphic>
               <content>
                  <StackPane prefHeight="400.0" prefWidth="600.0">
                     <ProgressIndicator fx:id="loadingProgressIndicator" />
                     <HBox visible="false" fx:id="networkAndServiceHBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
                        <children>
                           <BorderPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                              <top>
                                 <HBox alignment="CENTER" spacing="5" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                       <Insets bottom="15.0" top="15.0" />
                                    </BorderPane.margin>
                                    <children>
                                       <Label text="%settings.http">
                                          <font>
                                             <Font size="20.0" />
                                          </font>
                                       </Label>
                                       <Label>
                                          <graphic>
                                             <FontIcon iconLiteral="fa-question-circle:20:#1E90FF" />
                                          </graphic>
                                          <font>
                                             <Font size="20.0" />
                                          </font>
                                          <tooltip>
                                             <Tooltip showDelay="200ms" showDuration="1m" text="%settings.http.tooltip">
                                                <font>
                                                   <Font size="14" />
                                                </font>
                                             </Tooltip>
                                          </tooltip>
                                       </Label>
                                    </children>
                                 </HBox>
                              </top>
                              <center>
                                 <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                                    <children>
                                       <HBox alignment="CENTER">
                                          <children>
                                             <ChoiceBox fx:id="httpIpChoiceBox" onAction="#onHttpIpChoiceBoxAction" HBox.hgrow="ALWAYS" converter="$httpIpChoiceBoxConverter" />
                                          </children>
                                       </HBox>
                                       <HBox alignment="CENTER" spacing="10.0">
                                          <children>
                                             <TextField fx:id="httpPortTextField" alignment="center" promptText="%settings.http.hint-port" />
                                             <CheckBox fx:id="httpAutoStartCheckBox" mnemonicParsing="false" onAction="#onHttpAutoStartCheckBoxAction" text="%settings.http.auto-start" />
                                          </children>
                                       </HBox>
                                    </children>
                                 </VBox>
                              </center></BorderPane>
                           <BorderPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        </children>
                        <padding>
                           <Insets left="20.0" right="20.0" />
                        </padding>
                     </HBox>
                  </StackPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="saveBtn" disable="true" mnemonicParsing="false" onAction="#onSaveBtnAction" text="%settings.save">
             <graphic>
                <FontIcon iconLiteral="fa-check:16:green" />
             </graphic>
          </Button>
            <Button mnemonicParsing="false" onAction="#onCancelBtnAction" text="%settings.cancel" />
        </buttons>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
